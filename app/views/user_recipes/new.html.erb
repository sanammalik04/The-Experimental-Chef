<h1><%="Review and Rate #{@original_recipe.name}"%></h1>


<%=form_for @review do |f|%>
<%=f.label :rating %>
<%= f.text_field :rating%>
<%=f.label :review%>
<%=f.text_area :review%>
<%= f.hidden_field :recipe_id, :value => @original_recipe.id%>
<%= f.hidden_field :user_id, :value => @user.id %>
<%=f.submit "Submit Review"%>
<%end%>

