<div class="jumbotron4 jumbotron-fluid">
  <div class="container">
    <div id="header-text-cookbook">
      <h1 class="display-4">Write a Review!</h1>
    </div>
  </div>
</div>

<div class= "review-page">
<br>
<div class="box">
    <h1><%="#{@original_recipe.name}"%></h1>
</div>

<% if @review.errors.any? %>
    <div id = "error_message">
        <ul>
            <% @review.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<h4>
<%=form_for @review do |f|%>
<%=f.label :rating, "Rating (1-10)" %><br>
<%= f.text_field :rating%><br><br>
<%=f.label :review%><br>
<%=f.text_area :review, style:"width: 700px;
  height: 200px;"%><br><br>
<%= f.hidden_field :recipe_id, :value => @original_recipe.id%>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%=f.submit "Submit Review"%>
<%end%>
</h4>
</div>

