 <div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div id="header-text-LogIn">
      <h1 class="display-4">Log In to View Your Recipes!</h1>
    </div>
  </div>
</div>

<div class= "error"><%=flash[:login_error]%></div>

<div class="user-form">
<%=form_tag login_path do %>
  <div class="form-group row">
    <%=label_tag :user_name, "Username", class:"col-sm-6 col-form-label"%>
        <div class="col-xs-4">
            <%=text_field_tag :user_name%>
        </div>
    </div>
<div class="form-group row ">
    <%=label_tag :password, "Password", class:"col-sm-6 col-form-label"%>
        <div class="col-xs-4">
        <%=password_field_tag :password%>
        </div>
</div>
  <div class="form-group row">
    <div class="col-sm-4">
    <%=submit_tag "Log In", class:"btn btn-primary"%> 
    </div>
  </div>
</form>
<%end%>
</div>
